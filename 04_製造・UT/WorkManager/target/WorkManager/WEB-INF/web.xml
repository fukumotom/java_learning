<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	version="3.1">

	<servlet>
		<servlet-name>dispatcherServlet</servlet-name>
		<servlet-class>jp.co.ojt.servlet.TaskFowardServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>dispatcherServlet</servlet-name>
		<url-pattern>/TaskFowardServlet</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>menuServlet</servlet-name>
		<servlet-class>jp.co.ojt.servlet.MenuServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>menuServlet</servlet-name>
		<url-pattern>/Menu</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>dispatcherServlet_re</servlet-name>
		<servlet-class>jp.co.ojt.servlet.TaskRedirectServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>dispatcherServlet_re</servlet-name>
		<url-pattern>/TaskRedirectServlet</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>dispatcherServlet_re2</servlet-name>
		<servlet-class>jp.co.ojt.servlet.SampleServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>dispatcherServlet_re2</servlet-name>
		<url-pattern>/SampleServlet</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>logoutServlet</servlet-name>
		<servlet-class>jp.co.ojt.servlet.LogoutServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>logoutServlet</servlet-name>
		<url-pattern>/Logout</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>registerFormServlet</servlet-name>
		<servlet-class>jp.co.ojt.servlet.RegisterFormServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>registerFormServlet</servlet-name>
		<url-pattern>/RegisterForm</url-pattern>
	</servlet-mapping>

	<!-- 認証範囲 -->
	<security-constraint>
		<web-resource-collection>
			<web-resource-name>Authentication of FormAuth</web-resource-name>
			<url-pattern>/WEB-INF/jsp/user/*</url-pattern>
		</web-resource-collection>
		<auth-constraint>
		</auth-constraint>
	</security-constraint>
	<security-constraint>
		<web-resource-collection>
			<web-resource-name>Authentication of FormAuth</web-resource-name>
			<url-pattern>/*</url-pattern>
		</web-resource-collection>
		<auth-constraint>
			<role-name>admin</role-name>
		</auth-constraint>
	</security-constraint>
	<security-constraint>
		<web-resource-collection>
			<web-resource-name>Authentication of FormAuth</web-resource-name>
			<url-pattern>/RegisterForm/*</url-pattern>
		</web-resource-collection>
	</security-constraint>
	
	<security-role>
		<role-name>admin</role-name>
	</security-role>

	<!-- form認証設定 -->
	<login-config>
		<auth-method>FORM</auth-method>
		<form-login-config>
			<form-login-page>/WEB-INF/login.jsp</form-login-page>
			<form-error-page>/WEB-INF/login.jsp?error=true</form-error-page>
		</form-login-config>
	</login-config>


	<resource-ref>
		<description>postgreSQL Datasource example</description>
		<res-ref-name>jdbc/postgres</res-ref-name>
		<res-type>javax.sql.DataSource</res-type>
		<res-auth>Container</res-auth>
	</resource-ref>

</web-app>
